generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URI")
}

model registerUser {
  id               Int      @id @default(autoincrement())
  name             String
  email            String   @unique
  registrationType String
  institutionName  String
  country          String
  phone            String
  earlyBird        Boolean
  regFee           String
  isPaid           Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model sponsor {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  level     String
  amount    String
  isPaid    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
